# Django configuration
SECRET_KEY=your-secret-key-replace-this
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdeployeddomain.com

# Database Configuration (PostgreSQL - Supabase)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-ID].supabase.co:5432/postgres
DB_ENGINE=django.db.backends.postgresql
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=[YOUR-PASSWORD]
DB_HOST=db.[YOUR-PROJECT-ID].supabase.co
DB_PORT=5432

# Supabase Configuration
SUPABASE_URL=https://[YOUR-PROJECT-ID].supabase.co
SUPABASE_KEY=[YOUR-API-KEY]

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-replace-this
JWT_ACCESS_TOKEN_LIFETIME=5  # hours
JWT_REFRESH_TOKEN_LIFETIME=1  # days

# Email settings
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourfrontenddomain.com

# Redis/Celery settings (for background tasks)
REDIS_URL=redis://redis:6379/0

# Storage settings (optional)
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_BUCKET_NAME=your-bucket-name
S3_REGION=your-region

# API Keys for external services
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key

# OAuth settings
GOOGLE_OAUTH2_KEY=your-google-oauth-client-id
GOOGLE_OAUTH2_SECRET=your-google-oauth-client-secret
GITHUB_KEY=your-github-oauth-client-id
GITHUB_SECRET=your-github-oauth-client-secret 